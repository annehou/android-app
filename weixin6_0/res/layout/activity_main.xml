<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:annie="http://schemas.android.com/apk/res/com.example.weixin6_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >     
    </android.support.v4.view.ViewPager>
    <LinearLayout 
        android:background="@drawable/tap_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <com.example.weixin6_0.ChangeColorIconWithText
            android:id="@+id/indicator_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            annie:icon="@drawable/ic_menu_start_conversation"
            annie:text="@string/app_name"
            annie:text_size="12sp"
            annie:color="#ff45c01a"/>
        
        <com.example.weixin6_0.ChangeColorIconWithText
            android:id="@+id/indicator_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            annie:icon="@drawable/ic_menu_friendslist"
            annie:text="@string/tab_contact"
            annie:text_size="12sp"
            annie:color="#ff45c01a"/>
        
        <com.example.weixin6_0.ChangeColorIconWithText
            android:id="@+id/indicator_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            annie:icon="@drawable/ic_menu_emoticons"
            annie:text="@string/tab_found"
            annie:text_size="12sp"
            annie:color="#ff45c01a"/>
        
        <com.example.weixin6_0.ChangeColorIconWithText
            android:id="@+id/indicator_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            annie:icon="@drawable/ic_menu_allfriends"
            annie:text="@string/tab_me"
            annie:text_size="12sp"
            annie:color="#ff45c01a"/>
    </LinearLayout>
</LinearLayout>
